<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/adapter_pdv_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:padding="10dp">

        <ImageView
            android:id="@+id/adapter_pdv_imv_letra"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:id="@+id/adapter_pdv_lly_texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/adapter_pdv_imv_letra"
            android:layout_toRightOf="@+id/adapter_pdv_imv_letra"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adapter_pdv_txv_razao_social"
                style="@style/AppTextViewTitle" />

            <TextView
                android:id="@+id/adapter_pdv_txv_nome_fantasia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="30"
                android:maxLines="1" />

            <TextView
                android:id="@+id/adapter_pdv_txv_cpf_cnpj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="18"
                android:maxLines="1" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#D5D5D5" />

</LinearLayout>